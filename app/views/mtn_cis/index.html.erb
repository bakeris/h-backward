<% if session[:service].authentication_token != '57813dc7992fbdc721ca5f6b0d02d559' %>

<div class = "row-fluid login-logo">
  <div class = "span6">
    <%= image_tag(@wallet.logo.url(:medium)) %>
  </div>

  <div class = "span6">
    <%= image_tag(@service_logo) %>
  </div>
</div>

<!-- Login -->
<div class = "login">
  <div class="page-header">
      <a href = "<%= main_path %>">
        <div class="icon">
            <span class="ico-arrow-right"></span>
        </div>
      </a>
      <h1><%= session[:service].name %></h1>
  </div>
  <div class = "row-fluid">
	  <div class = "span12">
	    <% if @error %>
        <div class = "alert alert-error">
          <ul>
          <% @error_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <% if @success %>
        <div class = "alert alert-success">
          <% @success_messages.each do |msg| %>
            <%= msg %>
          <% end %>
        </div>
      <% end %>
	    <div class = "block">

      <!------------------------------------------ Data-fluid ----------------------------------->
		  <div class = "data-fluid" >
		    <% if session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7705423' %>
	        <form action = "/MTNCI/cashout" method = "post">
	      <% else %>
		      <form action = "/MTNCI/InitializePayment" method = "post">
		    <% end %>
		      <%= hidden_field_tag "transaction_id", "#{@basket.transaction_id rescue @basket.first.transaction_id}" %>
		      <% if session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7700ee4' || session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7705423' %>
		        <div class = "row-form">
		          <div class = "span12">
		            <span class="bottom">Numéro de compte PAYMONEY à <%= (session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7700ee4') ? ' recharger' : 'débiter'%></span>
			          <%= text_field_tag "paymoney_account_number", session[:paymoney_account_number], :readonly => true %>
		          </div>
	          </div>
	        <% end %>
	        <div class = "row-form">
	          <div class = "input-append">
		          <div class = "span9">
			          <%= text_field_tag "magellan", @transaction_amount, :readonly => true %>
			          <button class = "btn btn-info" type = "button"><%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
		          </div>
		        </div>
	        </div>
	        <div class = "row-form">
	          <div class = "input-append">
		          <div class = "span9">
			          <%= text_field_tag "Frais", (@basket.fees rescue @basket.first.fees), :readonly => true %>
			          <button class = "btn btn-info" type = "button">Frais [Shipping] <%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
		          </div>
		        </div>
	        </div>
          <div class = "<%= @phone_number_css %>">
		        <div class = "span12">
			        <%= text_field_tag "colomb", params[:phone_number], placeholder: 'Numéro de téléphone', :autocomplete => :off %>
		        </div>
	        </div>
	        <div class = "<%= @token_number_css %>">
		        <div class = "span12">
			        <%= text_field_tag "token", params[:token], placeholder: 'Code de sécurité', :autocomplete => :off %>
		        </div>
	        </div>
	        <% if session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7705423' %>
	          <div class="form-group">
              <%= text_field_tag "cashout_account_number", '', placeholder: 'Compte destinataire', :autocomplete => :off, class: "form-control input-sm" %>
            </div>
	        <% end %>
          <br />
          <div class="span12">
		        <button class="btn">
			        Payer avec Mtn Mobile Money <div class="icon-arrow-next icon-white"></div>
		        </button>
	        </div>
        </form>
		  </div>
	    <!------------------------------------------ Data-fluid ----------------------------------->
	    </div>
	  </div>
  </div>
</div>
<!-- END Login -->

<% else %>
<div class="row payment-fields paymoney">

  <div class="login">

    <div class="page-header">
      <a href="/Main">
        <div class="icon">
          <span class="ico-arrow-right"></span>
        </div>
      </a>
      <%= image_tag(@wallet.logo.url(:medium)) %>
    </div>

<!-- Begin row -->
    <div class="row">
	    <div class="col-xs-5">
  <!-- Begin block -->
	      <div class="block">
	        <% if @guce_notice %>
	          <div class = "alert alert-notice" style = "text-align: justify; color: blue;">
              <p><%= @guce_notice %></p>
            </div>
	        <% end %>
	        <% if @error %>
            <div class = "alert alert-error" style = "text-align: justify; color: red;">
              <% @error_messages.each do |msg| %>
                <p><%= msg %></p>
              <% end %>
            </div>
          <% end %>
          <% if @success %>
            <div class = "alert alert-success">
              <% @success_messages.each do |msg| %>
                <%= msg %>
              <% end %>
            </div>
          <% end %>

          <div class = "data-fluid" >
        <% if session[:operation].authentication_token == '3d20d7af-2ecb-4681-8e4f-a585d7705423' %>
	        <form action = "/MTNCI/cashout" method = "post">
	      <% else %>
		      <form action = "/MTNCI/InitializePayment" method = "post">
		    <% end %>
		      <%= hidden_field_tag "transaction_id", "#{@basket.transaction_id rescue @basket.first.transaction_id}" %>
	        <div class="form-group">
            <div class="input-group">
              <%= text_field_tag "magellan", @transaction_amount, :readonly => true, class: "form-control input-sm" %>
              <span class="input-group-btn">
                <button type="button" class="btn btn-sm"><%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
              </span>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group">
              <%= text_field_tag "Frais", (@basket.fees rescue @basket.first.fees), :readonly => true, class: "form-control input-sm" %>
              <span class="input-group-btn">
                <button type="button" class="btn btn-sm">Frais [Shipping] <%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= text_field_tag "colomb", params[:phone_number], placeholder: 'Numéro de téléphone', :autocomplete => :off, class: "form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= text_field_tag "token", params[:token], placeholder: 'Code de sécurité', :autocomplete => :off, class: "form-control input-sm" %>
          </div>

          <br />
	        <div class="form-group">
            <button class="btn btn-info btn-sm">
              Payer avec Mtn Mobile Money <div class="glyphicon glyphicon-circle-arrow-right"></div>
            </button>
          </div>
        </form>
		  </div>
        </div>
  <!-- End block -->

	      </div>

	    </div>
    </div>
<!-- End row -->

  </div>


</div>
<% end %>
