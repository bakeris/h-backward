<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1><%= session[:service]["operations"]["#{session[:service]['operation_id']}"]["title"] %><small><%= session[:service]["operations"]["#{session[:service]['operation_id']}"]["title_comment"] %></small></h1>
</div>
<div class = "row-fluid">
	<div class = "span12">
	  <%#= render 'layouts/flash_messages' %>
	  <% if @error %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if @success %>  
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
	  <div class = "block">
	  
	  
    
    <!------------------------------------------ Data-fluid ----------------------------------->
		<div class = "data-fluid" >
		  <%= form_tag ("/PayMoney/ProcessPayment") do %>       
	      <div class = "<%= @transaction_amount_css %>">
	        <div class = "input-append">
		        <div class = "span9">
			        <%= text_field_tag "magellan", session[:service]["transaction_amount"], :readonly => true %>
			        <button class = "btn btn-info" type = "button">USD</button>
		        </div>
		      </div>
	      </div>
        <div class = "<%= @account_number_css %>">		      
		      <div class = "span12">
			      <%= text_field_tag "colomb", params[:colomb], placeholder: 'NumÃ©ro de compte', :autocomplete => :off %>
		      </div>
	      </div>	
        <div class = "<%= @password_css %>">
		      <div class = "span12">
			      <%= password_field_tag "drake", params[:drake], placeholder: 'Mot de passe' %>
		      </div>
	      </div>	        	      
        <br />
        <div class="span12">
		      <button class="btn">
			      Valider <div class="icon-arrow-next icon-white"></div>  	
		      </button>
	      </div>
      <% end %>
		</div>
	  <!------------------------------------------ Data-fluid ----------------------------------->
	  </div>	
	  
	</div>
</div>


