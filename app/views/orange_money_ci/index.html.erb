<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1><%= session[:operation].name %><small><%= session[:operation].comment %></small></h1>
</div>
<div class = "row-fluid">
	<div class = "span12">
	  <%#= render 'layouts/flash_messages' %>
	  <% if @error %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if @success %>  
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
	  <div class = "block">
	    
    <!------------------------------------------ Data-fluid ----------------------------------->
		<div class = "data-fluid" >
		  <%#= form_tag("#{@parameter.orange_money_ci_url}", :html => {:enctype => 'application/x-www-form-urlencoded'}) do %>  
		  <form accept-charset="UTF-8" enctype = "application/x-www-form-urlencoded" action="https://ompay.orange.ci/e-commerce_test_gw/" method="post">
		    <%#= hidden_field_tag "transaction_id", "#{@basket.transaction_id rescue @basket.first.transaction_id}" %>  
		    <%= hidden_field_tag "merchantid", "1f3e745c66347bc2cc9492d8526bfe040519396d7c98ad199f4211f39dfd6365" %>  
		    <%= hidden_field_tag "amount", "#{session[:basket]["transaction_amount"] + (@basket.fees.ceil rescue @basket.first.fees.ceil)}" %>  
		    <%= hidden_field_tag "sessionid", "#{@basket.transaction_id rescue @basket.first.transaction_id}" %>  
		    <%= hidden_field_tag "purchaseref", "#{session[:basket]["basket_number"]}" %> 
		    <%= hidden_field_tag "token", "#{@session_id}" %>     
	      <div class = "<%= @transaction_amount_css %>">
	        <div class = "input-append">
		        <div class = "span9">
			        <%= text_field_tag "magellan", session[:basket]["transaction_amount"], :readonly => true %>
			        <button class = "btn btn-info" type = "button"><%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
		        </div>
		      </div>
	      </div>
	      <div class = "row-form">
	        <div class = "input-append">
		        <div class = "span9">
			        <%= text_field_tag "Frais", @shipping, :readonly => true %>
			        <button class = "btn btn-info" type = "button">Frais [Shipping] <%= @wallet_currency.symbol %> (<%= @wallet_currency.code %>)</button>
		        </div>
		      </div>
	      </div>
	      <br />
        <div class="span12">
		      <button class="btn">
			      Payer avec Orange Money <div class="icon-arrow-next icon-white"></div>  	
		      </button>
	      </div>
      <%# end %>
      </form>
		</div>
	  <!------------------------------------------ Data-fluid ----------------------------------->
	  </div>	
	</div>
</div>
